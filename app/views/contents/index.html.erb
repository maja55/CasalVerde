

  <div>
  <% content = Content.find_by_name("Villa long description") %>
  <p><%= content.paragraph.html_safe %></p>
  <hr>
  <% if admin? %>
    <%= link_to "Edit", edit_content_path(content), class: "btn btn-default"%>
  <% end %>
  </div>

  <div>
    <% photo = Photo.find(30) %>
    <%= image_tag photo.image.small %>
    <% if admin? %>
    <%= link_to "Edit", edit_photo_path(photo), class: "btn btn-default"%>
    <% end %>
  </div>


<br>

<div id=carousel, class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="carousel slide multi-item-carousel" id="theCarousel">
        <div class="carousel-inner">

          <% @photos.each_with_index do |image, index|%>

          <div class="item <%= 'active' if index == 0 %>">
            <div class="item-item col-sm-4">
            <%= image_tag image.image, class: "img-responsive" %>
            <% if admin? %>
            <%= link_to "Edit", edit_photo_path(image), class: "btn btn-default"%>
            <% end %>
            </div>
          </div>
        <%end%>
      </div>

<!--  Example item end -->
        </div>
        <a class="left carousel-control" href="#theCarousel" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
        <a class="right carousel-control" href="#theCarousel" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
      </div>
    </div>
  </div>



<script>
$('.multi-item-carousel').carousel({
  interval: false
});

// for every slide in carousel, copy the next slide's item in the slide.
// Do the same for the next, next item.
$('.multi-item-carousel .item').each(function(){
  var next = $(this).next();
  if (!next.length) {
    next = $(this).siblings(':first');
  }
  next.children(':first-child').clone().appendTo($(this));

  if (next.next().length>0) {
    next.next().children(':first-child').clone().appendTo($(this));
  } else {
  	$(this).siblings(':first').children(':first-child').clone().appendTo($(this));
  }
});
</script>
