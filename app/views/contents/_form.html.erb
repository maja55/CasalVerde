<%= form_for @content do |f| %>


  <div class="form-group">
    <label>Text:</label>
    <br>
    <%= f.text_area :paragraph, :class => "tinymce", :rows => 18, :cols => 80 %>
    <%=tinymce%>
  </div>

  <label>Publish this content?</label>

    <div class="actions">
     <%= f.submit "Publish", class: "btn btn-primary" %>
    </div>

<%end%>
