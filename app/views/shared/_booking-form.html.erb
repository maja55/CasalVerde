<%= form_for @booking do |f| %>

  <h3>Booking Information:</h3>

  <div>
    <%= f.label("Salutation") %>
    <%= f.select :salutation, [["Mr.", 1], ["Ms.", 2]] %>
  </div>

  <div>
    <%= f.label("First Name") %>
    <%= f.text_field(:first_name) %>
  </div>

  <div>
    <%= f.label("Insertion") %>
    <%= f.text_field(:insertion) %>
  </div>

  <div>
    <%= f.label("Last Name") %>
    <%= f.text_field(:last_name) %>
  </div>

  <div>
    <%= f.label("Date of Birth") %>
    <%= f.date_field(:date_of_birth) %>
  </div>

  <div>
    <%= f.label("Country") %>
    <%= f.text_field(:country) %>
  </div>

  <div>
    <%= f.label("Street") %>
    <%= f.text_field(:street) %>
  </div>

  <div>
    <%= f.label("House Number") %>
    <%= f.number_field(:house_number) %>
  </div>

  <div>
    <%= f.label("ZIP Code") %>
    <%= f.text_field(:zip_code) %>
  </div>

  <div>
    <%= f.label("City") %>
    <%= f.text_field(:city) %>
  </div>

  <div>
    <%= f.label("Phone Number") %>
    <%= f.text_field(:phone_number) %>
  </div>

  <div>
    <%= f.label("Email") %>
    <%= f.text_field(:email) %>
  </div>

  <div>
    <%= f.submit "Book now", class: "btn btn-default" %>
  </div>

<% end %>
