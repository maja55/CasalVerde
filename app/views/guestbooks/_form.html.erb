<%= form_for Guestbook.new do |f| %>
  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <label>Email</label>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <label>Message</label>
    <%= f.text_area :message, class: "form-control" %>
  </div>
  <br>
  <div clas="action">
    <%= f.submit "Submit", class: "btn btn-default btn-xl" %>
  </div>
<% end %>
