<header>
    <div class="header-content">
        <div class="header-content-inner">
          <div class="container">
            <div class="row">
              <div class="col-lg-8 col-lg-offset-1 text-center">
                <h2>Did you enjoy your stay?</h2>
                <hr>
                <%= form_for Guestbook.new do |f| %>
                  <% if Guestbook.new.errors.any? %>
                     <div id="error_explanation">
                     <h2><%= pluralize(Guestbook.new.errors.count, "error") %> prohibited this post from being saved:</h2>
                     <ul><% Guestbook.new.errors.full_messages.each do |msg| %>
                       <li><%= msg %></li>
                     <% end %>
                     </ul>
                   </div>
                 <% end %>
                  <div class="form-group">
                    <label>Name</label>
                    <%= f.text_field :name, class: "form-control" %>
                  </div>
                  <br>
                  <div class="form-group">
                    <label>Email</label>
                    <%= f.text_field :email, class: "form-control" %>
                  </div>
                  <br>
                  <div class="form-group">
                    <label>Message</label>
                    <%= f.text_area :message, class: "form-control" %>
                  </div>
                  <br>
                  <div clas="action">
                    <%= f.submit "Submit", class: "btn btn-primary btn-xl page-scroll" %>
                  </div>
                <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</header>
