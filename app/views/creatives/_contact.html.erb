<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <h2 class="section-heading">Contact</h2>
                <p>Do you have questions or remarks? Please let us know.</p> 
                <hr class="primary">
                <%= form_for @question do |f| %>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="Name" class="form-label">Name</label>
                      <%= f.text_field :name, class:"form-control" %>
                    </div>
                    <div class="form-group">
                      <label for="Email" class="form-label">Email</label>
                      <%= f.text_field :email, class:"form-control" %>
                    </div>
                    <div class="form-group">
                      <label for="Question" class="form-label">Question/Remark</label>
                      <%= f.text_area :question, class:"form-control"%>
                    </div>
                  </div>
                </div>
            </div>
          <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
              <div class="actions">
                <%= f.submit "Submit", class: "btn btn-default btn-xl contact" %>
              </div>
            </div>
        </div>
    </div>
  </div>



  <% end %>
</section>
